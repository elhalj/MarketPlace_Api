{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@usecases/*": ["src/usecases/*"],
      "@adaptaters/*": ["src/adaptaters/*"],
      "@infrastructure/*": ["src/infrastructure/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
